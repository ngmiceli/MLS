<!DOCTYPE html>
<html>
  <head>
	<title><%= title %></title>
	<%= csrf_meta_tag %>
	<%= render 'layouts/student/stylesheets' %>
  </head>
  
  <body>
    <%= render 'layouts/student/header' %>
    <div id = "page-wrapper">
      <%= render 'layouts/student/nav-panel' %>
      <div id = "content-panel">
		<div id = "content-panel-body-frame" class="box_round2 box_shadow3">
			<div id = "content-panel-nav" class="tall">
				&nbsp;
				<% if params[:action] == "edit" or params[:action] == "show" %>
					<%= render "layouts/student/myinfo/content_panel_nav" %>
				<% end %>
			</div>
			<div id = "content-panel-body" class="box_shadow1 box_round2 reset-top">
				<% flash.each do |key, value| %>
					<div class="flash <%= key %>"><%= value %></div>
				<% end %>
				<%= yield %>
			</div>
		</div>
		<%= render 'layouts/student/footer' %>
     </div>
     
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>